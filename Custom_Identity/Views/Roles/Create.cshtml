@model string

<h1>Create Role</h1>

<style>
    h1 {
        color: #333;
        text-align: center;
        margin-top: 20px;
    }

    form {
        max-width: 400px;
        margin: 0 auto;
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        font-weight: bold;
    }

    input[type="text"] {
        width: 100%;
        padding: 10px;
        font-size: 16px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    button[type="submit"] {
        display: block;
        width: 100%;
        padding: 10px;
        font-size: 16px;
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

        button[type="submit"]:hover {
            background-color: #0056b3;
        }
</style>

<form asp-action="Create">
    <div class="form-group">
        <label for="roleName">Role Name:</label>
        <input type="text" id="roleName" name="roleName" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
