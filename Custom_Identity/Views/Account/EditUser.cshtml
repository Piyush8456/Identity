@using Custom_Identity.Models.ViewModel;
@model EditUserViewModel;


<h1>Edit User</h1>

<form asp-action="EditUser" method="post">
    <div>
        <label asp-for="Id">Id</label>
        <input disabled asp-for="Id" class="form-control" />
    </div>
    <div>
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div>
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div>
        <label asp-for="Address">Address</label>
        <input asp-for="Address" class="form-control" />
    </div>
    <button type="submit">Save</button>
    <div class="card">
        <div class="card-header">
            <h3>User-Roles</h3>
        </div>
        <div class="card-body">
            @if (Model.Roles.Any())
            {
                foreach(var role in Model.Roles)
                {
                    <h5 class="card-title">@role</h5>
                }
            }
                else
                {
                    <h5 class="card-title">None at the moment</h5>
                }
            
        </div>
        <div class="card-footer">
            <a href="#" style="width:auto" class="btn btn-primary">
            Manage Role    
            </a>
        </div>
    </div>
    <div class="card mt-3">
        <div class="card-header">
            <h3>User-Claims</h3>
        </div>
        <div class="card-body">
            @if (Model.Claims.Any())
            {
                foreach (var Claim in Model.Claims)
                {
                    <h5 class="card-title">@Claim</h5>
                }
            }
            else
            {
                <h5 class="card-title">None at the moment</h5>
            }
           
        </div>
        <div class="card-footer">
            <a asp-action="ManageUserClaims" asp-route-UserId="@Model.Id" style="width:auto" class="btn btn-primary">
                Manage Claims
            </a>
        </div>
    </div>
</form>

